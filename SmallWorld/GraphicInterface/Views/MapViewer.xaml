<UserControl x:Class="GraphicInterface.MapViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="250">
    
    <ScrollViewer Name="scrollMap">
        <ScrollViewer.Background>
            <ImageBrush ImageSource="../Resources/img/map-background.png" Stretch="Fill" TileMode="Tile" Viewport="0,0,48,48"
    ViewportUnits="Absolute"></ImageBrush>

        </ScrollViewer.Background>
        <Grid Name="mapGrid" VerticalAlignment="Center" HorizontalAlignment="Center" MouseLeftButtonDown="clickOnMap" MouseMove="hoverOnMap">
        </Grid>
    </ScrollViewer>
    
</UserControl>
