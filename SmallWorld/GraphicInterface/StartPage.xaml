<Window x:Class="GraphicInterface.StartPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="icon.ico"
        Title="SmallWorld" Height="600" Width="800" ResizeMode="NoResize">
    <Grid>
        <Button Content="Jouer" Click="startGame" HorizontalAlignment="Left" Margin="241,472,0,0" VerticalAlignment="Top" Width="323" Height="73"/>
        <StackPanel HorizontalAlignment="Left" Height="250" Margin="29,233,0,0" VerticalAlignment="Top" Width="294">
            <TextBlock TextWrapping="Wrap" Text="Nickname:"/>
            <TextBox Height="23" TextWrapping="Wrap" Text="" />
            <RadioButton Content="Dwarf" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="RadioButton_Checked_1"/>
            <RadioButton Content="Gallic" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="RadioButton_Checked_1"/>
            <RadioButton Content="Viking" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="RadioButton_Checked_1"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="250" Margin="489,233,0,0" VerticalAlignment="Top" Width="256">
            <TextBlock TextWrapping="Wrap" Text="Nickname:"/>
            <TextBox Height="23" TextWrapping="Wrap" Text="" />
            <RadioButton Content="Dwarf" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="RadioButton_Checked_1"/>
            <RadioButton Content="Gallic" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="RadioButton_Checked_1"/>
            <RadioButton Content="Viking" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="RadioButton_Checked_1"/>
        </StackPanel>
        <Grid HorizontalAlignment="Left" Height="122" Margin="29,43,0,0" VerticalAlignment="Top" Width="716">
            <RadioButton Content="Demo" HorizontalAlignment="Left" Margin="72,60,0,0" VerticalAlignment="Top" Checked="selectGameMode"/>
            <RadioButton Content="Small" HorizontalAlignment="Left" Margin="272,60,0,0" VerticalAlignment="Top" Checked="selectGameMode"/>
            <RadioButton Content="Normal" HorizontalAlignment="Left" Margin="472,60,0,0" VerticalAlignment="Top" Checked="selectGameMode"/>
        </Grid>
    </Grid>
</Window>
