<Window x:Class="GraphicInterface.GameBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="icon.ico"
        Title="SmallWorld" Height="700" Width="800" ResizeMode="NoResize">

    <Grid Margin="0,0,0,0">

        <Canvas Name="canvasMap" VerticalAlignment="Top" Width="792" MouseLeftButtonDown="clickOnMap">
            
        </Canvas>

        <DockPanel HorizontalAlignment="Left" Height="120" LastChildFill="False" Margin="0,552,0,0" VerticalAlignment="Top" Width="792">

            <StackPanel Height="120" VerticalAlignment="Top" Width="300">
                <TextBlock TextWrapping="Wrap" Text="Informations sur les unités"/>
            </StackPanel>
            <StackPanel Height="120" VerticalAlignment="Top" Width="250">
                <TextBlock Foreground="Green">
                        <TextBlock Name="Player1Nickname" /><LineBreak />
                        - <TextBlock Name="Player1Points"></TextBlock> points<LineBreak />
                        - <TextBlock Name="Player1Units"></TextBlock> unités restantes
                </TextBlock>
                <TextBlock Margin="0,10,0,0" Foreground="Red">
                        <TextBlock Name="Player2Nickname" /><LineBreak />
                        - <TextBlock Name="Player2Points"></TextBlock> points<LineBreak />
                        - <TextBlock Name="Player2Units"></TextBlock> unités restantes
                </TextBlock>
            </StackPanel>

            <Button Content="Fin du tour" Height="28" VerticalAlignment="Top" Width="75" Click="endRound" DockPanel.Dock="Right"  Margin="0,15,25,0" />
            <TextBlock HorizontalAlignment="Right" TextWrapping="Wrap" VerticalAlignment="Top" DockPanel.Dock="Top" Margin="0,0,103,0"><Run Text="Tour "/><InlineUIContainer>
            		<TextBlock x:Name="CurrentRound" />
            	</InlineUIContainer><Run Text=" / "/><InlineUIContainer>
            		<TextBlock x:Name="MaxRound"/>
            	</InlineUIContainer></TextBlock>

        </DockPanel>
    </Grid>
</Window>
